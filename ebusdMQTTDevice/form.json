{
  "elements": [
    {
      "type":  "ExpansionPanel", "caption": "Connection Data",
      "items": [
        {
          "type":  "RowLayout",
          "items": [
            {"type": "ValidationTextBox", "name": "Host", "caption": "Host", "onChange": "echo 'change';"},
            {"type": "ValidationTextBox", "name": "Port", "caption": "Port"}
          ]
        },
        {
          "type":  "RowLayout",
          "items": [
            {
              "type": "Select", "name": "CircuitName", "caption": "Circuit Name", "visible": true, "options": []
            },
            {"type": "Button", "name": "btnReadCircuits", "caption": "Read Circuits", "onClick": "IPS_RequestAction($id, 'btnReadCircuits', '');"}
          ]
        },
        {"type": "NumberSpinner", "name": "UpdateInterval", "caption": "Update Interval", "suffix": "Minutes"}
      ]
    }
  ],
  "actions":  [
    {
      "type":    "Label",
      "caption": "Selection and configuration of the eBUS messages to be included as status variables"
    },
    {
      "type":    "List",
      "name":    "VariableList",
      "columns": [
        {
          "name":    "messagename",
          "width":   "200px",
          "caption": "Message",
          "save":    false
        },
        {
          "name":    "variablename",
          "width":   "300px",
          "caption": "Status Variable(s)",
          "save":    false
        },
        {
          "name":    "identnames",
          "width":   "200px",
          "caption": "Ident",
          "visible": false,
          "save":    false
        },
        {
          "name":    "readable",
          "width":   "75px",
          "caption": "Readable",
          "save":    false
        },
        {
          "name":    "writable",
          "width":   "75px",
          "caption": "Writeable",
          "save":    false
        },
        {
          "name":    "value",
          "width":   "auto",
          "caption": "read value",
          "save":    false
        },
        {
          "name":    "keep",
          "width":   "75px",
          "caption": "Active",
          "save":    false,
          "edit":    {
            "type": "CheckBox"
          }
        },
        {
          "name":    "pollpriority",
          "width":   "90px",
          "caption": "Poll Priority",
          "save":    false,
          "edit":    {
            "type":    "NumberSpinner",
            "value":   0,
            "minimum": 0,
            "maximum": 9
          }
        },
        {
          "name":    "objectidents",
          "width":   "200px",
          "caption": "ID(s)",
          "save":    false
        }
      ]
    },
    {
      "type":  "RowLayout",
      "items": [
        {
          "type":    "Button",
          "name":    "BtnReadConfiguration",
          "caption": "Read Configuration",
          "onClick": "$module = new IPSModule($id); $ret = EBM_ReadConfiguration($id); if ($ret === null) {echo 'Fehler';} else {echo count($ret) . ' Eintr√§ge gefunden';}"
        },
        {
          "type":    "Button",
          "name":    "BtnReadValues",
          "caption": "Read Values",
          "onClick": "$module = new IPSModule($id); $ret = EBM_UpdateCurrentValues($id, $VariableList); echo $ret . ' Werte gelesen';"
        },
        {
          "type":    "Button",
          "name":    "BtnCreateUpdateVariables",
          "caption": "Create/Update Variables",
          "onClick": "$module = new IPSModule($id); $ret = EBM_CreateAndUpdateVariables($id, $VariableList); echo $ret . ' Variablen angelegt/aktualisiert';"
        }
      ]
    },
    {
      "type":    "ProgressBar",
      "name":    "ProgressBar",
      "caption": "ProgressBar",
      "width":   "222px",
      "visible": false
    }
  ],
  "status":   [
    {
      "code":    202,
      "icon":    "error",
      "caption": "IP address can not be empty."
    },
    {
      "code":    203,
      "icon":    "error",
      "caption": "Circuit name is not valid."
    },
    {
      "code":    204,
      "icon":    "error",
      "caption": "IP address is not valid."
    }
  ]
}
